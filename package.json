{
  "name": "trietix-server",
  "version": "1.0.0",
  "description": "Trietix - Event management made easier",
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run test",
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "start:build": "tsc build & pm2 start ecosystem.config.json --no-daemon",
    "compile": "tsc --build",
    "compile:watch": "tsc --build --watch",
    "pre:dev": "cross-env NODE_ENV=development nodemon lib/index.js",
    "dev": "concurrently --kill-others \"npm run compile:watch\" \"npm run pre:dev\"",
    "release": "git add . && npm run commit && git push --follow-tags private main",
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trietix/server.git"
  },
  "keywords": [
    "Trietix",
    "Event",
    "Management"
  ],
  "author": "Emmanuel Omoiya <emmanuelomoiya6@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trietix/server/issues"
  },
  "homepage": "https://github.com/trietix/server#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/validator": "^13.7.17",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@typegoose/typegoose": "^11.3.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "colorthief": "^2.4.0",
    "compression": "^1.7.4",
    "concurrently": "^8.2.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "iconv-lite": "^0.6.3",
    "jimp": "^0.22.10",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "mongoose": "^7.3.4",
    "morgan": "^1.10.0",
    "node-vibrant": "^3.2.1-alpha.1",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.3.0",
    "validator": "^13.9.0",
    "winston": "^3.10.0",
    "xss-clean": "^0.1.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
