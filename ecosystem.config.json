{
    "apps": [
      {
        "name": "trietix-api",
        "script": "pnpm",
        "args": "run dev",
        "instances": 1,
        "autorestart": true,
        "watch": false,
        "time": true,
        "log_file": "/app/logs/trietix-api-dev.log",
        "combine_logs": true,
        "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  